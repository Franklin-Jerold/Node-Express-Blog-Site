<%- include('../partials/head.ejs') %>

    <body>

        <%- include('../partials/nav.ejs') %>

            <div class="blogs content">
                <h2>All Blogs</h2>

                <% if (blogs.length> 0) { %>
                    <% blogs.forEach(blog=> { %>

                        <a class="single" href="/blogs/<%= blog._id %> ">
                            <br>
                            <h3 class="title">
                                <%= blog.title %>
                            </h3>
                            <p class="snippet">
                                <%= blog.snippet %>
                            </p>
                        </a>

                        <% }) %>
                            <% } else { %>

                                <p>There are no Blogs to display...</p>

                                <% } %>

            </div>
            <%- include('../partials/footer.ejs') %>
    </body>

    </html>